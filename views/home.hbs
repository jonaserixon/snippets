{{# each snippet }}
        <div class="snippets">
            <a href="/snippet/{{this._id}}" id="snippetTitle"> {{ this.description }} </a>
            <a id="snippetLanguage">#{{this.language}}</a>
            <br>

            <a href="/snippet/{{this._id}}">
            <pre id="exde"><code> {{this.content}} </code></pre>
            </a>

                {{#if this.updatedAt}}
                    <p class="createdAt">Updated at: {{ this.updatedAt }} by </p>
                {{ else }}
                    <p class="createdAt">Created at: {{ this.createdAt }}</p>
                {{/if}}

                {{#if ../user}}
                    <a href="/delete/{{this._id}}"><i class="fa fa-remove" id="removeIcon"></i></a>
                    <a href="/update/{{this._id}}"><i class="fa fa-edit" id="editIcon"></i> </a>
                {{/if}}
            <p id="createdBy">Snippet by: <strong>{{this.createdBy}}</strong></p>
        </div>
{{/each}}








